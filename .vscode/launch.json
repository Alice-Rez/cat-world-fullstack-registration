    // configuration, so the debugger will run with nodemon
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch app.js via nodemon linux",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/bin/www",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "${workspaceFolder}/src/public/**/**/*.js"
            ]
        }

    ]
}